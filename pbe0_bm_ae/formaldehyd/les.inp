&GLOBAL
RUN_TYPE ENERGY
PROJECT_NAME formald_less
&END GLOBAL
&FORCE_EVAL
&PROPERTIES
 &TDDFPT
   NSTATES 10
   MAX_ITER 20
   MAX_KV 60
   CONVERGENCE 1.0E-8
   KERNEL FULL
   &XC
                  &XC_FUNCTIONAL PBE0
                  &END XC_FUNCTIONAL
           &END XC
   &SOC
     EPS_FILTER 1.0E-30
   &END SOC
   &PRINT
     &SOC_PRINT
	SPLITTING T
	SOME T
     &END SOC_PRINT
   &END PRINT
 &END TDDFPT
&END PROPERTIES

&DFT
	BASIS_SET_FILE_NAME  ../basis
    	POTENTIAL_FILE_NAME  POTENTIAL
	&SCF
		SCF_GUESS RESTART
      		 EPS_SCF 1.0E-7
     		 MAX_SCF 20
	&OUTER_SCF
		EPS_SCF 1.0E-7
		MAX_SCF 200
	&END OUTER_SCF
	 &OT
		  PRECONDITIONER FULL_ALL
	 	  MINIMIZER DIIS
	 &END OT
  &END SCF
  &MGRID
      	 CUTOFF 1200
      	 REL_CUTOFF 80
      	 NGRIDS 5
  &END

	&QS
		EPS_PGF_ORB 1.0E-30
		EPS_DEFAULT 1.0E-15
		METHOD GAPW
	&END QS

	&POISSON
		PERIODIC NONE
		PSOLVER MT
	&END POISSON

	&XC
      		&XC_FUNCTIONAL PBE0
      		&END XC_FUNCTIONAL
    	&END XC
&END DFT
&SUBSYS
	&CELL
		ABC 10.0 10.0 10.0
		PERIODIC NONE
	&END CELL
		&TOPOLOGY
                COORD_FILE_FORMAT  XYZ
                COORD_FILE_NAME   lit.xyz
		&CENTER_COORDINATES 
		&END
                CONNECTIVITY OFF
        &END TOPOLOGY
	    &KIND 	C
	        BASIS_SET def2-TZVPD
       		POTENTIAL ALL
	    &END KIND
	    &KIND   O
                BASIS_SET def2-TZVPD
                POTENTIAL ALL
      &END KIND
	    &KIND   H
               BASIS_SET def2-TZVPD
               POTENTIAL ALL
      &END KIND
            &KIND   N
               BASIS_SET def2-TZVPD
               POTENTIAL ALL
      &END KIND
&END SUBSYS
&END FORCE_EVAL
