&GLOBAL
RUN_TYPE GEO_OPT
PROJECT_NAME CAU7_TABA
&END GLOBAL
&MOTION
&GEO_OPT
	MAX_ITER 900
#	&BFGS
#		RESTART_HESSIAN TRUE
#		RESTART_FILE_NAME CAU7_TABA-BFGS.Hessian
#	&END BFGS
&END GEO_OPT
&END MOTION
&FORCE_EVAL
&DFT
	BASIS_SET_FILE_NAME BASIS_MOLOPT
	BASIS_SET_FILE_NAME BASIS_MOLOPT_UZH
	BASIS_SET_FILE_NAME BASIS_ADMM_UZH
	POTENTIAL_FILE_NAME GTH_SOC_POTENTIALS
	&SCF
		SCF_GUESS RESTART
		EPS_SCF 1.0E-8
		MAX_SCF 50
		&OUTER_SCF
			MAX_SCF 200
			EPS_SCF 1.0E-8
		&END OUTER_SCF
		&OT
			PRECONDITIONER FULL_SINGLE_INVERSE
			MINIMIZER DIIS
		&END OT
	&END SCF
	&MGRID
		CUTOFF 800
		REL_CUTOFF 80
		NGRIDS 5
	&END MGRID
	&QS
		EPS_PGF_ORB 1.0E-30
                EPS_DEFAULT 1.0E-15
                METHOD GPW
	&END QS
	&POISSON
		PERIODIC XYZ
		PSOLVER PERIODIC
	&END POISSON
	@include xcdef_pbe0
&END DFT
&SUBSYS
	&CELL
		CELL_FILE_FORMAT CIF
		CELL_FILE_NAME ../CAU7_TABA.cif
	&END CELL
	&TOPOLOGY
		COORD_FILE_FORMAT XYZ
		COORD_FILE_NAME restart.xyz
		CONNECTIVITY OFF
	&END TOPOLOGY
	@include kindef_pbe0
&END SUBSYS
&END FORCE_EVAL
