&GLOBAL
RUN_TYPE ENERGY
PROJECT_NAME CAU7_TABA
&END GLOBAL
&FORCE_EVAL
&PROPERTIES
&TDDFPT
@include ../tddftdef
&END TDDFPT
&END 
&DFT
	BASIS_SET_FILE_NAME BASIS_MOLOPT
	BASIS_SET_FILE_NAME BASIS_MOLOPT_UZH
	POTENTIAL_FILE_NAME GTH_SOC_POTENTIALS
	&SCF
		SCF_GUESS RESTART
		EPS_SCF 1.0E-8
		MAX_SCF 50
		&OUTER_SCF
			MAX_SCF 200
			EPS_SCF 1.0E-8
		&END OUTER_SCF
		&OT
			PRECONDITIONER FULL_SINGLE_INVERSE
			MINIMIZER DIIS
		&END OT
	&END SCF
	&MGRID
		CUTOFF 800
		REL_CUTOFF 80
		NGRIDS 5
	&END MGRID
	&QS
		EPS_PGF_ORB 1.0E-30
                EPS_DEFAULT 1.0E-15
                METHOD GPW
	&END QS
	&POISSON
		PERIODIC XYZ
		PSOLVER PERIODIC
	&END POISSON
	@include xcdef_pbe
&END DFT
&SUBSYS
	&CELL
		CELL_FILE_FORMAT CIF
		CELL_FILE_NAME ../CAU7_TABA.cif
	&END CELL
	&TOPOLOGY
		COORD_FILE_FORMAT XYZ
		COORD_FILE_NAME opt_dz.xyz
		CONNECTIVITY OFF
	&END TOPOLOGY
	@include kindef_dz
&END SUBSYS
&END FORCE_EVAL
